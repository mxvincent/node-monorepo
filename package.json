{
  "name": "node-monorepo",
  "version": "1.0.0",
  "description": "A preconfigured playground for testing purposes.",
  "engines": {
    "node": ">=16",
    "pnpm": ">=3"
  },
  "scripts": {
    "build": "swc ./src -d ./dist",
    "build:dev": "swc src -d dist -w",
    "src:check": "tsc",
    "src:check:dev": "tsc -w",
    "src:lint": "eslint --ext .ts src",
    "src:lint:fix": "eslint --ext .ts src --fix",
    "clean": "find . ! -path '*/node_modules/*' -name 'dist' -d -prune -exec rm -rf '{}' +; find . -name \"*.tsbuildinfo\" -prune -exec rm -rf '{}' +",
    "docker-build:demo": "src/applications/playground/packages.sh",
    "modules:info": "find . -name \"node_modules\" -type d -prune | xargs du -chs",
    "modules:prune": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "script:demo:seed-database": "node dist/applications/demo/scripts/seedDatabase.js",
    "start:demo:app-server": "node dist/applications/demo/server.js",
    "start:demo:app-server:dev": "nodemon --watch \"dist/**/*\" dist/applications/demo/server.js",
    "test": "jest",
    "test:dev": "jest --watch",
    "ts-node:demo-app-server": "node -r ts-node/register src/applications/demo/server.ts",
    "ts-node:demo-app-server:watch": "node-dev src/applications/demo/server.ts"
  },
  "author": "Maxime VINCENT",
  "dependencies": {
    "@fastify/swagger": "^8.1.0",
    "@fastify/swagger-ui": "^1.2.0",
    "@sinclair/typebox": "^0.25.8",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "currency-codes": "^2.1.0",
    "date-fns": "^2.29.3",
    "fastify": "^4.5.3",
    "fastify-plugin": "^4.2.1",
    "i18n-iso-countries": "^7.5.0",
    "pg": "^8.7.3",
    "pino": "^8.0.0",
    "prom-client": "^14.1.0",
    "query-string": "^7.1.1",
    "ramda": "^0.28.0",
    "reflect-metadata": "^0.1.13",
    "tiny-invariant": "^1.3.1",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.186",
    "@swc/jest": "^0.2.21",
    "@types/amqplib": "^0.8.2",
    "@types/app-root-path": "^1.2.4",
    "@types/jest": "^29.0.3",
    "@types/node": "^16.0.34",
    "@types/ramda": "0.28.18",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.3",
    "node-dev": "^7.4.3",
    "nodemon": "^2.0.16",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.6.2",
    "sqlite3": "^5.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
