{
  "jsc": {
		 "parser": {
			 "syntax": "typescript",
			 "tsx": false,
			 "decorators": true,
			 "dynamicImport": true
		 },
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		},
		"target": "es2020",
		"paths": {
			"@app/*": ["./src/applications/*"],
			"@pkg/*": ["./src/packages/*"],
			"@interfaces/*": ["./src/interfaces/*"]
		},
		"baseUrl": "."
  },
	"module": {
		"type": "commonjs"
	},
	"sourceMaps": true
}
